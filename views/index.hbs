  <script>
    var AutoDetectSizeTimeHold;
    var OldHeight = 0;
    var OldWidth = 0;

    function AutoDetectSize() {
      try {
        clearTimeout(AutoDetectSizeTimeHold);
      } catch (e) {}

      var cHeight = $(window).height();
      var cWidth = $(window).width();

      if (cHeight != OldHeight || cWidth != OldWidth) {
        var leftH = 80;
        var xH = cHeight;
        var xW;

        if (cWidth > 600) {
          xW = (8 * (xH - leftH)) / 6;
          if (xW > cWidth) {
            xW = cWidth;
          }
        } else {
          xW = (6 * (xH - leftH)) / 8;
          if (xW > cWidth) {
            xW = cWidth;
          }
          if (xW < 300) xW = 300;
        }

        $('#container').stop(true).animate({
          width: xW + 'px'
        }, 300);

        OldHeight = cHeight;
        OldWidth = cWidth;
      }

      AutoDetectSizeTimeHold = setTimeout(AutoDetectSize, 1000);
    }

    $(window).on('resize', AutoDetectSize);
    $(document).ready(AutoDetectSize);
  </script>
